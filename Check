sfcc-tsob:
  credentials:
    fs_mis_bbdl_012:
      clientId: cid_bbdl_012
      clientSecret: sec_bbdl_012
    fs_mis_bgfz_015:
      clientId: cid_bgfz_015
      clientSecret: sec_bgfz_015
=========
@ConfigurationProperties(prefix = "sfcc-tsob")
public class SfccTsobProperties {

    private Map<String, ClientCredentials> credentials;
	
	public record ClientCredentials(String clientId, String clientSecret) {
}

====
@Service
public class HelloService {

    private final SfccTsobProperties sfccTsobProperties;

    HelloService(SfccTsobProperties sfccTsobProperties) {
        this.sfccTsobProperties = sfccTsobProperties;
    }

    public ClientCredentials get(String dwEnv) {
    var map = sfccTsobProperties.getCredentials();
        if (map == null || !map.containsKey(dwEnv)) {
        throw new IllegalArgumentException("Unknown dw-env: " + dwEnv);
    }
    var c = map.get(dwEnv);
        if (c.clientId() == null || c.clientSecret() == null) {
        throw new IllegalStateException("Missing clientId or clientSecret for dw-env: " + dwEnv);
    }
        return new ClientCredentials(c.clientId(), c.clientSecret());
}

